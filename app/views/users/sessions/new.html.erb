<div class="section__wrapper">
    <div class="wrapper__box--large MaxWidth740">
        <header class="header_cate">
            <span class="header_cate_title">
      			  登入
      		  </span>
      	</header>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <%= render 'layouts/messages' %>
            <div class="section__form align-center" >
                <span class="form__label Width40 ">信箱</span> 
                <span class="flexauto "><%= f.email_field :email, autofocus: true %></span>
            </div>
            <div class="section__form align-center" >
                <span class="form__label Width40 ">密碼 </span>
                <span class="flexauto "><%= f.password_field :password, autocomplete: "off" %></span>
            </div>
            <div class="section__form align-center" >
                <% if devise_mapping.rememberable? -%>
                    <div class="field">
                      <%= f.check_box :remember_me %>
                      <%= f.label :remember_me %>
                    </div>
                <% end %>
            </div>
            <div class="section__form align-center" >
                <button class="button" type="submit" name="action">
              		  <span>登入</span>
              	</button>
          	</div>
        <% end %>
            <%= render "users/shared/links" %>
    </div>
</div>