<%= form_for @doctor, url: doctors_path, html: { multipart: true } do |f| %>
	<div class="row">
		<div class="input-field col s12">
			<%= f.file_field :doctor_img %>
		</div>
    	<div class="input-field col s12">
     		<%= f.text_field :name, :placeholder => "姓名" %>
    	</div>
      	<div class="input-field col s12">
      		<%= f.text_field :specialty, :placeholder => "主治專長" %>
      	</div>
      	<div class="input-field col s12">
      		<%= f.text_field :experience, :placeholder => "經歷" %>
      	</div>
      	<button class="btn waves-effect waves-light" type="submit" name="action">Submit
			<i class="material-icons right">send</i>
		</button>
		
	</div>
<% end %>


