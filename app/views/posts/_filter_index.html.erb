<div class="row">
  <div class="section">
    <div class="container-doctor">
      <div class="col s12">
        <div class="card card-doctor z-depth-0">
          <div class="row card-content card-content-doctor black-text">
            <%= form_for_filterrific @filterrific do |f| %>
            <ul class="card-content-doctor-ul">
              <li class="col s12 m3"><span class="card-title red-text">留言類別</span></li>
              <li class="col s12 m3"><%= f.select :with_phase_id , @filterrific.select_options[:with_phase_id], {include_blank: '- 全部留言 -'}, class:"browser-default" %></li>
              <li class="col s12 m3"><%= f.select :with_issue_id , @filterrific.select_options[:with_issue_id], {include_blank: '- 全部留言 -'}, class:"browser-default" %></li>
              <li class="col s12 m3"><%= f.select :sorted_by, @filterrific.select_options[:sorted_by],{}, class:"browser-default" %></li>
            </ul>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<%= render_filterrific_spinner %>
