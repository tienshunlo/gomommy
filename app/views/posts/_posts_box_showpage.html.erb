<div class="post-user">
	<div class="post-user-avatar">
		<%= image_tag "yuna.jpg", class:"user-avatar-image circle" %>
	</div>
	<div class="post-user-name">
		<%= link_to "#{post.doctor.name}",doctor_path(post.doctor), {class:"name"} %><br>
  		<%= time_ago_in_words(post.created_at) %> ago
	</div>
	<div class="chip-period truncate">
			<%= @post.phase.title %>
		</div>
		<div class="chip-kind truncate">
			<%= @post.issue.title %>
		</div>
</div>
<div class="post-content">
	<div>
		<%= "[" %> <%= Post::SUBJECT[post.subject][0] %> <%= "]" %> <%= post.comment.size %> 篇回覆
	</div>
	<h5> 
		<%= post.title %> 
	</h5>
	<div class="section">
		<%= simple_format(post.description) %>
	</div>
</div>
<div class="post-tag">
	<div class="chip-period truncate">
			<%= post.phase.title %>
		</div>
		<div class="chip-kind truncate">
			<%= post.issue.title %>
		</div>
	<div class="circle action-chip">
		<i class="material-icons" title="我也遇過">exposure_plus_1</i>
	</div>
	<div  class="circle action-chip">
		<%= link_to '<i class="material-icons">delete</i>'.html_safe, doctor_post_path(@doctor, @post), :confirm => "Are you sure?", :method => :delete, class:'white-text' %>
	</div>	
	<div  class="circle action-chip">
		<!-- Edit Post Modal Trigger -->
		<%= link_to '<i class="material-icons">mode_edit</i>'.html_safe, "#modal-edit-post", class:'white-text' %>
	</div>
    <!-- Edit Post Modal Structure -->
    <div id="modal-edit-post" class="modal modal-fixed-footer modal-post">
    	<div class="modal-content modal-content-post">
	    	<%= form_for ([@doctor, @post]) do |f| %>
	      		<div class="row">
	      			<div class="input-field col s12">
	      				<%= f.text_field :title, :placeholder => "標題" %>
	      			</div>
			      	<div class="input-field col s12 m4">
	        			<%= label_tag "請選擇主題" %><br>
	        			<%= f.select :subject , Post::SUBJECT, {include_blank: false} %>
    				</div>
    				<div class="input-field col s12 m4">
	        			<%= label_tag "妊娠週數" %><br>
	        			<%= f.select :period , Post::PERIOD, {include_blank: false} %>
    				</div>
    				<div class="input-field col s12 m4">
	        			<%= label_tag "主要範圍" %><br>
	        			<%= f.select :kind , Post::KIND, {include_blank: false} %>
    				</div>
			    	<div class="input-field col s12">
      					<%= f.text_area :description, :placeholder => "內文", class:"materialize-textarea" %>
      				</div>
      				<div class="input-field col s12 right-align">
	      				<button class="btn waves-effect waves-light" type="submit" name="action">
	      					<span>送出</span>
						</button>
					</div>
				</div>
			<% end %>
		</div>
	</div>
</div>


