<div class="post-user">
	<div class="post-user-avatar">
		<%= image_tag "yuna.jpg", class:"user-avatar-image circle" %>
	</div>
	<div class="post-user-name">
		<%= link_to "#{post.doctor.name}",doctor_path(post.doctor), {class:"name"} %><br>
  		<%= time_ago_in_words(post.created_at) %> ago
	</div>
</div>
<div class="post-content">
	<div>
		<%= "[" %> <%= Post::SUBJECT[post.subject][0] %> <%= "]" %> <%= post.comment.size %> 篇回覆
	</div>
	<%= link_to doctor_post_path(post.doctor, post) do %> 
		<h6> <%= truncate("#{post.title}", length: 30)  %> </h6>
	<% end %>
	<% if false %>
	<div class="section post-byline valign-wrapper">
		<%= simple_format(post.description) %>
	</div>
	<% end %>
</div>
<div class="post-tag">
	<div class="chip-period truncate">
		<%= post.phase.title %>
	</div>
	<div class="chip-kind truncate">
		<%= post.issue.title %>
	</div>
	<div class="circle action-chip">
		<i class="material-icons" title="我也遇過">exposure_plus_1</i>
	</div>
</div>




<% if false %>
<div class="col s12 m4 l4">
	<div class="doctor-post-board-list">
		<div class="section post-board-top valign-wrapper">
			<div class="post-board-user-pic">
				<%= image_tag "yuna.jpg", class:"circle" %>
			</div>
			<div class="post-board-user-name">
				<%= link_to "#{post.doctor.name}",doctor_path(post.doctor), {class:"name"} %><br>
      			<%= time_ago_in_words(post.created_at) %> ago
			</div>
			
		</div>
		<div class="section post-board-middle post-board-list-middle">
			<div>
				<%= "[" %> <%= Post::SUBJECT[post.subject][0] %> <%= "]" %> <%= post.comment.size %> 篇回覆
			</div>
			<%= link_to doctor_post_path(post.doctor, post) do %> 
    			<h6> <%= truncate("#{post.title}", length: 20)  %> </h6>
    		<% end %>
    		<% if false %>
			<div class="section post-byline valign-wrapper">
				<%= simple_format(post.description) %>
			</div>
			<% end %>
		</div>
		<div class="post-board-bottom valign-wrapper">
			<div class="post-chip chip-period truncate">
				<%= "我也遇過" %>
			</div>
			<% if false %>
			<div class="post-chip chip-period truncate">
				<%= post.phase.title %>
			</div>
			<div class="post-chip chip-kind truncate">
				<%= post.issue.title %>
			</div>
			<% end %>
		</div>
	</div>	
</div>
<% end %>