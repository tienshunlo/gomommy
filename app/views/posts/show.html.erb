<div class="flex-post-box flex-post-box-large">
	<%= render 'posts/posts_box_showpage', post: @post  %>
</div>


<div class="flex-new-comment-box-wrap">
	<header class="header_cate">
		<span class="header_cate_title">
			<% if @comments.blank? %>
				成為第一個回覆的人
			<% else %>
				參加討論
			<% end %>
		</span>
	</header>
	<div>
		<%= render 'comments/form' %>
	</div>	
</div>
<% if !@comments.blank? %>
	<ul class="collection">
		<li>
			<%= render 'comments/comment', collection: @comments %>
		</li>
	</ul>
<% end %>
