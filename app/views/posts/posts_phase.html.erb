

<% content_for :sidebar do %>
	<%= render 'doctors/sidebar_index' %>
<% end %>

<div class="section">
	<div class="container-doctor">
    	<div class="col s12">
        	<header class="filter_section_header">
          		<% Phase.all.each do |phase| %>
          			<%= link_to phase.title, posts_phase_posts_path(anchor: phase.title), { class:"chip"} %>
  		  		<% end %>
  		   </header>
    	</div>
    </div>
</div>


<div class="section">
	<% @phases.each do |phase| %>
		<header class="posts_phase_section_header">
			<span class="posts_phase_section_title">
				<%= link_to phase_issue_posts_path(phase: phase) do %>
					<span id="<%=phase.title%>"><%= phase.title %></span>
				<% end %>
			</span>
		</header>
		<div class="row">
			<% @posts_tag.select{|t| t.phase_id == phase.id}.first(3).each do |post| %>
				<%= render 'posts/list_posts_cate', post: post  %>
			<% end %>
		</div>
	<% end %>
</div>
