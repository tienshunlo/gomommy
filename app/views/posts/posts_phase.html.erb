<div class="section">
	<%= render 'shared/flex_filterbar' %>
</div>
<div class="section">
	<% @phases.each do |phase| %>
		<header class="header_cate">
			<span class="header_cate_title">
				<%= link_to phase_issue_posts_path(phase: phase) do %>
					<span id="<%= phase.title %>"><%= phase.title %></span>
				<% end %>
			</span>
			<span class="header_cate_more">
				<%= link_to phase_issue_posts_path(phase: phase) do %>
					<span id="<%= phase.title %>">More ></span>
				<% end %>
			</span>
		</header>
		<div class="wrapper-post-index">
			<% @posts_tag.select{|t| t.phase_id == phase.id}.first(3).each do |post| %>
				<div class="wrapper__box--small">
					<%= render 'posts/posts_box', post: post  %>
				</div>	
			<% end %>
		</div>
	<% end %>
</div>
