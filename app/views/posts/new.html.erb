<!-- New Post Modal Structure -->
<% content_for :sidebar do %>
	<%= render 'doctors/sidebar_doctor_profile' %>
<% end %>

<% if @post.errors.any? %>
  <div id="error_explanation">
    <ul>
    <% @post.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
    <%= form_for ([@doctor, @doctor.post.build]) do |f| %>
    <div class="modal-content modal-content-post">
        <div class="row">
                <div class="col s12 m4">
                    <%= f.label "請選擇主題:", class:"new-post-label" %>
                    <%= f.select :subject , Post::SUBJECT, {include_blank: false}, {class:"browser-default"} %>
                </div>
                <div class="col s12 m8">
                    <%= f.label "請輸入標題:", class:"new-post-label" %>
                    <%= f.text_field :title %>
                </div>
                </div>
            <div class="col s12">
                <%= f.label "內容:", class:"new-post-label" %>
                <%= f.text_area :description, class:"materialize-textarea" %>
            </div>
            
           
            <div class="input-field col s12 m4">
                <%= label_tag "妊娠週數" %><br>
                <%= f.select :period , Post::PERIOD, {include_blank: false} %>
            </div>
            <div class="input-field col s12 m4">
                <%= label_tag "主要範圍" %><br>
                <%= f.select :kind , Post::KIND, {include_blank: false} %>
            </div>
           
           
            
            
        </div>
    </div>
    <div class="modal-footer">
        <button class="btn waves-effect waves-light" type="submit" name="action">
            <span>送出</span>
        </button>
    </div>
    <% end %>




<% if false %>
<div class="container">
	<div class="row">
		<div class='section'>
			<div class= "discussion-container">
				<ul class="control-container">
					<ul class="control-page-items z-depth-0">
						<div class="chip chip-normal"><span>新增留言</span></div>
					</ul>
				</ul>
				<div class="discussion-form">
					<%= render 'form' %>
				</div>
			</div>	
		</div>
		<a href='<%= doctor_path(@doctor) %>' class='btn waves-effect eaves-light' name='action'>回到上一頁</a>
	 </div>
</div>
<% end %>