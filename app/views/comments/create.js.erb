<% if @comment.errors.any? %>
    <!-- alert("ERROR(S): <%#= j @comment.errors.full_messages.join('; ') %>") -->
    $('#new_comment').prepend('<%= j render partial: 'comments/error_messages', locals: { comment: @comment } %>');
    $('#error_explanation').fadeOut(3000);
<% else %>
    $('.add_comment').prepend('<%= j render partial: 'comments/comment', locals: { comment: @comment } %>');
    $('#comment_content').val('');
    alert("Comment created");
<% end %>

